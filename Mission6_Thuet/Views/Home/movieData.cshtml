@{
}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0; /* Add some margin for better spacing */
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2; /* Add a light background color for header cells */
    }

    tr:hover {
        background-color: #f5f5f5; /* Change background color on hover for better user experience */
    }
</style>
@model List<Movies>

<table>
    <thead>
        <tr>
            
            <th>Category</th>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Copied To Plex</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                
                <td>@x.Categories?.CategoryName</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@(x.Edited == 1 ? "Yes" : "No")</td>
                <td>@x.LentTo</td>
                <td>@(x.CopiedToPlex == 1 ? "Yes" : "No")</td>
                <td>@x.Notes</td>


                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
