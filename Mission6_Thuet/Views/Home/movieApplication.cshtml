@model Movies
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Movie</title>
    <!--
            The following block defines the CSS styles for the page.
            It includes styling for labels, inputs, selects, and buttons.
        -->
    <style>
        body {
            margin-bottom: 120px; /* Increase the margin to give more space */
        }
        label {
            display: block;
            margin-bottom: 8px;
        }

        input, select {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
        }

        button {
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #45a049;
            }
    </style>
    
     
    </head>

    <!-- The body of the HTML document -->
    <body>

        <!-- Section heading for adding a new movie -->
        <h2>Add New Movie</h2>

        <!-- Form for adding a new movie -->
    <form method="post">

        <input type="hidden" asp-for="MovieId" />

        <!-- Label and input for the Category field -->
        <label asp-for="CategoryId">Categories:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (var m in ViewBag.Categories)
            {
                <option value="@m.CategoryId">@m.CategoryName</option>
            }
        </select>

        <!-- Label and input for the Title field -->
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />

        <!-- Label and input for the Year field -->
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />

        <!-- Label and input for the Director field -->
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />

        <!-- Label and select dropdown for the Rating field -->
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="NR">NR</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="TV-14">TV-14</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-Y7">TV-Y7</option>
            <option value="UR">UR</option>


        </select>

        <!-- Label and select dropdown for the Edited field -->
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>

        <!-- Label and input for the LentTo field -->
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />

        <!-- Label and input for the CopiedToPlex field -->
        <label asp-for="CopiedToPlex">Copied To Plex:</label>
        <select asp-for="CopiedToPlex">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>

        <!-- Label and input for the Notes field with maxlength set to 25 -->
        <label asp-for="Notes">Notes (max 25 characters):</label>
        <input asp-for="Notes" maxlength="25" />

        <!-- Button to submit the form -->
        <button type="submit">Add Movie</button>

        <div asp-validation-summary="All"></div>

    </form>
    </body>
